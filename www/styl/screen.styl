@import colors
@import prefixes
@import 'components/triangle'

.ig
  @import basics
.ig
  .year
    width 100%
    position relative
    height 50px
    h2
      position absolute
      top 0px
      left 50%
      width 80px
      font-family: 'Oswald', sans-serif;
      margin 0px
      margin-left (@width / -2)
      text-align center
      line-height 50px

    .svatek
      position absolute
      width 16px
      height 16px
      margin-top 6px
      cursor help
      &.workday
        margin-left -18px
        background ColorHeadingLink
      &.weekend
        margin-left 6px
        background ColorHeading
  .legend
    height 25px
    width 100%
    position relative
    span
      position absolute
      top 0px
      font-variant small-caps
      border-bottom 1px solid black
      left 50%
      width 200px
      &.weekends
        color darken(ColorHeading, 80%)
        border-bottom-color ColorHeading
        text-align right
        margin-left -240px
      &.workdays
        color darken(ColorHeadingLink, 80%)
        border-bottom-color ColorHeadingLink
        left 50%
        margin-left 40px


